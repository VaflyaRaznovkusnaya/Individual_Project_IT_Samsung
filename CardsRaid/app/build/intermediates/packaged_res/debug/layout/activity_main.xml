<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/MainToTable"
        android:layout_width="192dp"
        android:layout_height="55dp"
        android:layout_marginStart="269dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="270dp"
        android:backgroundTint="#4F252121"
        android:fontFamily="@font/neucha"
        android:onClick="start_game"
        android:text="@string/start_game"
        android:textColor="@color/paper_color"
        android:textSize="20sp"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rules_button"
        android:layout_width="192dp"
        android:layout_height="55dp"
        android:layout_marginStart="269dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="270dp"
        android:backgroundTint="#4F252121"
        android:fontFamily="@font/neucha"
        android:onClick="show_rules"
        android:text="@string/go_to_rules"
        android:textColor="@color/paper_color"
        android:textSize="20sp"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MainToTable" />

    <TextView
        android:id="@+id/rules_text"
        android:layout_width="536dp"
        android:layout_height="84dp"
        android:layout_marginBottom="64dp"
        android:background="#68290B17"
        android:backgroundTint="#81090404"
        android:fontFamily="@font/neucha"
        android:text="@string/rules_text_1"
        android:textAlignment="center"
        android:textColor="@color/paper_color"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rules_button"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>